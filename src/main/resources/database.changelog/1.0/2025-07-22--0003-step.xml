<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog-ext.xsd">
    <preConditions>
        <not>
            <tableExists tableName="step"/>
        </not>
    </preConditions>

    <changeSet id="2025-07-22--0003-step" author="Valeri Klotchenko">
        <createTable tableName="step">
            <column name="id"
                    type="numeric(19,0)"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"/>
            </column>

            <column name="description"
                    type="varchar(200)">
                <constraints nullable="false"/>
            </column>

            <column name="recipe_id"
            type="numeric(19,0)">
                <constraints nullable="false"
                             foreignKeyName="fk_ste_recipe"
                             references="recipe(id)"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>